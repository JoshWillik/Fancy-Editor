.fancy-editor {
  display: flex;
}

.fancy-editor .menu-bar {
  width: 3em;
  .menu-item {
    display: block;
    padding: 0.5em;
    text-align: center;
    border: 1px solid #111;
    width: 100%;
  }
}

.fancy-editor .editor {
  width: 100%;
}

.fancy-editor .section {
  background: blue;
  color: white;
  margin: 1em;
}
